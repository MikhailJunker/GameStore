@model GameStore.Client.DTO.GameDTO

@{
    ViewData["Title"] = "Просмотр";
}

<h1>Просмотр</h1>

<div>
    <h4>Игра</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Год выпуска
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            Жанр
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            Заказы
        </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Orders.Count)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
